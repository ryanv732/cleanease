<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>DigiStore Manager</name>
	<author>foobla.com</author>
	<creationDate>Sep 2013</creationDate>
	<copyright>(C) 2013 foobla.com</copyright>
	<license>GNU/GPL</license>
	<authorEmail>info@foobla.com</authorEmail>
	<authorUrl>www.foobla.com</authorUrl>
	<version>3.1.1</version>
	<description>DigiStore manager module. Displays a link to license manager and edit store account pages.</description>
	<files>
		<filename module="mod_digistore_manager">mod_digistore_manager.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
			<language tag="en-GB">en-GB.mod_digistore_manager.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
				<field name="show_profile" type="radio" default="1" label="Show profile link" description="DSMODSHOWPROFILE">
					<option value="1">DSMODYES</option>
					<option value="0">DSMODNO</option>
				</field>
	
				<field name="show_lic" type="radio" default="1" label="Show licenses link" description="DSMODSHOWLIC">
					<option value="1">DSMODYES</option>
					<option value="0">DSMODNO</option>
				</field>
	
				<field name="show_ord" type="radio" default="1" label="Show orders link" description="DSMODSHOWORD">
					<option value="1">DSMODYES</option>
					<option value="0">DSMODNO</option>
				</field>
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>