<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>DigiStore Shopping Cart</name>
	<author>foobla.com</author>
	<creationDate>Oct 2013</creationDate>
	<copyright>Copyright (C) 2013 foobla.com</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>info@foobla.com</authorEmail>
	<authorUrl>www.foobla.com</authorUrl>
	<version>3.1.1b</version>
	<description>DigiStore shoping cart</description>
	<files>
		<filename module="mod_digistore_cart">mod_digistore_cart.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
			<language tag="en-GB">en-GB.mod_digistore_cart.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
				<field name="digistore_category" type="text" default="" label="Default Category (enter category name):" description="This module displays a Buy Now button and once the user adds something to the shopping cart, it shows the shopping cart." />
				
				<field name="modbuynow" type="list" default="0" label="BUTTON" description="">
					<option value="2">NOTHING</option>
					<option value="1">TEXT</option>
					<option value="0">IMAGE</option>
				</field>
				
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>