	<version>3.1.1</version>
	<description>PayBy check plugin from foobla.com. </description>
	<files>
		<filename plugin="bycheck">bycheck.php</filename>
				<folder>bycheck</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_bycheck.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_payment_bycheck.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_bycheck.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_payment_bycheck.ini</language>
