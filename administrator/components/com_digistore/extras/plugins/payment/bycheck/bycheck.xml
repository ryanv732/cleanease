		<language tag="da-DK">da-DK/da-DK.plg_payment_bycheck.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_payment_bycheck.ini</language>
		<language tag="pt-PT">pt-PT/pt-PT.plg_payment_bycheck.ini</language>		
	</languages> 
	<!-- parameters for Joomla 1.5.x -->
	<params>
		<param name="plugin_name" type="text" default="PayBy Check" label="PLG_NAME" description="" />
		<param name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />	
	</params>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="PayBy Check" label="PLG_NAME" description="" />
					<field name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
			</fieldset>
		</fields>
	</config>
</extension>
